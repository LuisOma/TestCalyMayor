<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="6"> <!-- Asegura que el peso total sea igual a la suma de los pesos de los hijos -->

    <TextView
        android:id="@+id/tipoTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Tu texto aquí"
        android:layout_gravity="center_vertical"
        android:gravity="center"/>

    <RadioGroup
        android:id="@+id/opcionesRadioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/siRadioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sí"/>

        <RadioButton
            android:id="@+id/noRadioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="No"/>

        <RadioButton
            android:id="@+id/naRadioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="N/A"/>
    </RadioGroup>

    <ImageView
        android:id="@+id/iconoImageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/baseline_camera_enhance_24"
        android:layout_gravity="center_vertical"
        />

</LinearLayout>
